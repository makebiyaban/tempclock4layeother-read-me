    define_char(char5,5);
    define_char(char6,6);
    define_char(char7,7);
    define_char(char8,8); 
    controlbyte=rtc_read(0x08);    
   
while(1)
 {   
               
    while(resett){
        if(sec==30 || sec==0)
            resett=0;    
        rtc_get_time(&hour,&miin,&sec);
        if((controlbyte & 0x01)==0){
            if(hour>12){
                pmam=1;
                hour-=12;
            }else{
                pmam=0;
            }
        }         
        sprintf(strr,"%02u:%02u:%02d",hour,miin,sec);
        lcd_gotoxy(0,0);
        lcd_puts(strr);
        if(pmam && (controlbyte & 0x01)==0 )
            lcd_puts(" PM");
        if(!pmam && (controlbyte & 0x01)==0 )         
            lcd_puts(" AM");
         
        delay_ms(900);   
    }
    resett=1;
    lcd_clear();
    controlbyte=rtc_read(0x08);    
    rtc_get_date (&week_day,&day,&month,&year);
    year%=100;    
    if(controlbyte & 0x02){       
		miladitoshamsi(day,month,year); 
        sal%=100;
        sprintf(str_date,"%02u/%02u/%02d ",sal,mah,rooz);
    }else{
        sprintf(str_date,"%02u/%02u/%02d ",year,month,day);        
    } 
    lcd_gotoxy(0,1);
